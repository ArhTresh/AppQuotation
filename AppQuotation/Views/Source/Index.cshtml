@model IEnumerable<AppQuotation.Models.Source>
@{
    ViewBag.Title = "Все Источники";
}
<a asp-action="Create">Добавить компанию</a>
<table class="table">
    <tr><td>Название</td><td>Url адрес</td><td></td></tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Name</td>
    <td>@item.BaseApiUrl</td>
    <td>
        <a asp-action="Edit" asp-controller="Source" asp-route-id="@item.Id">Изменить</a> |
        <a asp-action="Delete" asp-controller="Source" asp-route-id="@item.Id">Удалить</a>
    </td>
</tr>
    }
</table>