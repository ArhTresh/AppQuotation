@model AppQuotation.Models.Source
@{
    ViewBag.Title = "Редактирование Источника";
}
<form asp-action="edit" asp-controller="Source" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Наименование</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BaseApiUrl" class="control-label">Api URL</label>
        <input type="text" asp-for="BaseApiUrl" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>