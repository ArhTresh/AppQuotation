@model AppQuotation.Models.Company
@{
    ViewBag.Title = "Удаление Компании";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Тикер</dt>
        <dd>
            @Html.DisplayFor(model => model.Ticker)
        </dd>
    </dl>

    <div>
        <form asp-controller="Company" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>